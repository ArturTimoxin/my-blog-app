.Header
    height 65px
    background-color: black
    border-bottom: 4px solid grey
    header
        box-sizing: border-box
        max-width 1150px
        display: flex
        justify-content: space-between
        margin 0 auto
        align-items: center
        @media screen and (max-width: 1150px)
            justify-content: space-around
        @media screen and (max-width: 650px)
            justify-content: space-between
            padding: 20px
        .logo
            font-family: 'Montserrat'
            font-size: 35px
            font-size: 16px
            font-weight: 800;
            padding-bottom: 10px
            color: white
            border-bottom: 0.5px solid white
            cursor pointer
        .menu
            margin 0
            cursor pointer
            @media screen and (max-width: 650px)
                display: none
            li
                display inline
                font-family: 'Montserrat'
                margin-right: 79px
                font-size: 16px
                font-weight: 800;
                font-style: normal;
                font-stretch: normal;
                line-height: 4.13;
                letter-spacing: normal;
                text-align: left;
                color: white
                cursor pointer
                transition: all .2s
                &:hover
                    color: grey
                &:last-child
                    margin: 0
        #menuIcon
            width: 30px
            height: 30px
            display: none
            @media screen and (max-width: 650px)
                display: flex
                flex-direction: column
                justify-content: space-between
            .line
                width: 100%
                height: 15%
                background-color: white

        